    "paths": {
        "/login": {
            "post": {
                "summary": "Login de usuario",
                "description": "Essa rota é responsável por fazer login de um usuario",
                "tags": ["Usuarios"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Usuario"
                            },
                            "examples": {
                                "Administrador": {
                                    "value": {
                                        "email": "administrador@gmail.com",
                                        "senha": "administrador"
                                    }
                                },
                                "Normaluser": {
                                    "value": {
                                        "email": "email",
                                        "senha": "senha"
                                    }
                                }
                            }
                        }
                        
                    }
                },
                "responses": {
                    "404": {
                        "description": "Não encontrado"
                    },
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string"
                                },
                                "example": "usuario logado"
                            }
                        }
                    }
                }
            }
        },
        "/login/new": {
            "post": {
                "summary": "Criação de um usuario",
                "description": "Essa rota é responsável por fazer a criação de um usuario",
                "tags": ["Usuarios"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Usuario"
                            },
                            "examples": {
                                "Administrador": {
                                    "value": {
                                        "nome": "administrador",
                                        "email": "administrador@gmail.com",
                                        "senha": "administrador"
                                    }
                                },
                                "Normaluser": {
                                    "value": {
                                        "nome": "normaluser",
                                        "email": "normaluser@gmail.com",
                                        "senha": "normaluser"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {                  
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                },
                                "examples": {
                                    "Administrador": {
                                        "value": {
                                            "id":"identificadorUnico",
                                            "email": "administrador@gmail.com",
                                            "senha": "hash",
                                            "grupo": "administrador",
                                            "createdAt": "UmDate",
                                            "__v": 0
                                        }
                                    },
                                    "Normaluser": {
                                        "value": {
                                            "id":"identificadorUnico",
                                            "senha": "hash",
                                            "email": "normaluser@gmail.com",
                                            "grupo": "normaluser",
                                            "createdAt": "UmDate",
                                            "__v": 0
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuario": {
            "get": {
                "summary": "Retornar todos os usuarios",
                "description": "Essa rota é responsável por retornar todos os usuarios",
                "tags": ["Usuarios"],
                "security": [{"apiKey": []}],
                "responses": {
                    "401": {
                        "description": "Não Autorizado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Usuario"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Atualizar o usuario",
                "description": "Essa rota é responsável por fazer a atualização do usuario logado",
                "tags": ["Usuarios"],
                "security": [{"apiKey": []}],
                "responses": {
                    "400": {
                        "description": "Já existe"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deletar o usuario",
                "description": "Essa rota é responsável por fazer a exclusão do usuario logado",
                "tags": ["Usuarios"],
                "security": [{"apiKey": []}],
                "responses": {
                    "400": {
                        "description": "Já existe"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/usuario/{id}": {
            "put": {
                "summary": "Atualizar qualquer usuario",
                "description": "Essa rota é responsável por fazer a atualização de um QUALQUER usuario. APENAS ADMS PODEM USAR ESSA ROTA",
                "tags": ["Usuarios"],
                "parameters": [
                    {
                        "name":"id",
                        "in": "path",
                        "description": "id para localização do usuario",
                        "required": true
                    }
                ],
                "security": [{"apiKey": []}],
                "responses": {
                    "401": {
                        "description": "Não Autorizado"
                    },
                    "400": {
                        "description": "Já existe"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deletar qualquer usuario",
                "description": "Essa rota é responsável por fazer a exclusão de QUALQUER usuario. APENAS ADMS PODEM USAR ESSA ROTA",
                "tags": ["Usuarios"],
                "parameters": [
                    {
                        "name":"id",
                        "in": "path",
                        "description": "",
                        "required": true
                    }
                ],
                "security": [{"apiKey": []}],
                "responses": {
                    "401": {
                        "description": "Inautorizado"
                    },
                    "400": {
                        "description": "Já existe"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties": {
                    "nome":{
                        "type": "string"
                    },
                    "email":{
                        "type": "string"
                    },
                    "senha": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "apiKey": {
                "type": "apiKey",
                "name": "athorization-token",
                "in": "header"
            }
            
        }
    }
}
