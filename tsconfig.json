{
  "compilerOptions": {
    "target": "es2017",                                 
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
                         
  },
  "include": [
    "src/**/*",
    ".eslintrc.json",
    "./vite.config.ts",
    "./vite-e2e.config.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
